{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es5",
    "jsx": "react",
    "skipLibCheck": true,
    "lib": ["es2017", "dom"],
    "types" : ["node", "websocket"],
    "strict": true,
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@lib/*": [
        "src/lib/*"
      ]
    }
  },
  "files": [
    "./src/index.ts"
  ],
  "include": [
    "src/*"
  ]
}
